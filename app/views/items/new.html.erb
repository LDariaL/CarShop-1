<!-- post in database. using Gem Simple Form -->

<%= simple_form_for @item do |f| %>  
 <div class="form-group row">
  <div class="col-sm-10">             
 <%= f.input :name, input_html: {class: "form-control form-control-sm", id:"colFormLabelSm"} %>
  </div>
  <div class="col-sm-10">                                
 <%= f.input :price, input_html: {class: "form-control form-control-sm", id:"colFormLabelSm"}, required: true %>
  </div>
  <div class="col-sm-10"> 
 <%= f.input :description, label: t("item.description"), input_html: {class: "form-control form-control-sm", id:"colFormLabelSm"} %>   <!-- Transleted into RU by /config/locales/ru.yml -->
  </div>
  <div class="col-sm-10"> 
 <%= f.button :submit, class: " btn btn-secondary", style: "margin-top: 15px" %>     <!-- Save button  -->
  </div>
 </div> 
<%end%>

<%= render partial: 'shared/email' %>

</div>