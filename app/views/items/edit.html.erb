<!DOCTYPE html>
<html>
  <div class="col-sm-12 my-auto">
    <h2 style="color: #B00100; margin: 0 auto">edit
      <%= @item.name.camelize %></h2>
    <br/>

    <%= simple_form_for @item do |f| %>
      <!-- post in database -->
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.input :name, input_html: {class: "form-control form-control-sm", id:"colFormLabelSm"} %>
        </div>
        <div class="col-sm-10">
          <%= f.input :price, input_html: {class: "form-control form-control-sm", id:"colFormLabelSm"}, required: true %>
        </div>
        <div class="col-sm-10">
          <%= f.input :description, label: t("item.description"), input_html: {class: "form-control form-control-sm", id:"colFormLabelSm"} %>
          <!-- Transleted into RU by /config/locales/ru.yml -->
        </div>
        <div class="col-sm-10">
          <%= f.button :submit, class: " btn btn-secondary", style: "margin-top: 15px" %>
          <!-- Save button -->
        </div>
      </div>
    <% end %>

    <%= render partial: 'shared/email' %>
    <!-- render method; partials file name starts _ to distinguish them from
    regular views, but referred to without the underscore -->
  </div>
</html>
