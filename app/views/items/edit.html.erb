<h2 style="color: #B00100; margin: 0 auto">edit <%= @item.name %></h2> <br/>


<%= form_tag item_path(@item), method: :put do %>     <!-- post in database -->
 <%= label_tag :name %>                                
 <%= text_field_tag :name, @item.name %>               <!-- name edited input -->
 <%= label_tag :price %>
 <%= text_field_tag :price, @item.price %>             <!-- price edited input -->
 <%= submit_tag "Update", class: "btn btn-large btn-primary" %>  <!-- Update button  -->
<% end %>